<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:layout_width="fill_parent"
	android:layout_height="@dimen/list_item_height"
	android:padding="3dp">

	<ImageView
		android:id="@+id/icon"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_marginRight="10dp"
		android:src="@drawable/icon" />

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
		    android:id="@+id/history_row_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/Green"
		    android:textSize="@dimen/font_size" />

		<com.cbsb.wakelan.widget.StarButton
		    android:id="@+id/history_row_star"
		    android:layout_width="32dp"
		    android:layout_height="32dp"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:clickable="true"
		    android:textColor="@color/Green" />

		<TextView
		    android:id="@+id/history_row_mac"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/history_row_title"
		    android:textColor="@color/Green"
		    android:textSize="@dimen/font_size" />

		<TextView
		    android:id="@+id/history_row_ip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/history_row_mac"
		    android:textColor="@color/Green"
		    android:textSize="@dimen/font_size" />

		<TextView
		    android:id="@+id/history_row_colon"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@id/history_row_ip"
		    android:layout_toRightOf="@id/history_row_ip"
		    android:text=":"
		    android:textColor="@color/Green"
		    android:textSize="@dimen/font_size" />

		<TextView
		    android:id="@+id/history_row_port"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@id/history_row_ip"
		    android:layout_toRightOf="@id/history_row_colon"
		    android:textColor="@color/Green"
		    android:textSize="@dimen/font_size" />
			
	</RelativeLayout>

</LinearLayout>
